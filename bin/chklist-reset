#!/usr/bin/tclsh
source $env(GODEL_ROOT)/bin/godel.tcl
set ilist [glob chklist/*/*]

foreach i $ilist {
# reset comment
  set kout [open $i/comment.txt w]
  puts $kout ""
  close $kout
  set chk [file tail $i]
# reset status
  exec chklist-set $chk,status ""
# reset owner
  exec chklist-set $chk,owner  Nobody
}
exec godel_draw.tcl
